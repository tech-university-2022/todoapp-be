{
  "name": "todoapp-be",
  "version": "1.0.0",
  "description": "Todo app - BE only",
  "main": "index.js",
  "scripts": {
    "start:development": "cross-env NODE_ENV=development nodemon src/index.js",
    "start:production": "cross-env NODE_ENV=production nodemon src/index.js",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "prepare": "husky install",
    "migration:generate": "sequelize-cli model:generate",
    "migration:up": "sequelize-cli db:migrate",
    "migration:down": "sequelize-cli db:migrate:undo",
    "migration:rollback": "sequelize-cli db:migrate:undo:all",
    "migration:genseed": "sequelize-cli seed:generate",
    "migration:seed": "sequelize-cli db:seed:all",
    "migration:undoseed": "sequelize-cli db:seed:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lethuccrma/todoapp-be.git"
  },
  "author": "Thuc Le & Duong Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lethuccrma/todoapp-be/issues"
  },
  "homepage": "https://github.com/lethuccrma/todoapp-be#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "depcheck": "^1.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "http-status": "^1.4.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.21.3",
    "uuid": "^8.3.2",
    "validator": "^13.0.0",
    "winston": "^3.2.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.5",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.0.1"
  }
}
